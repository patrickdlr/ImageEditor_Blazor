	<script>
		Blazor.defaultReconnectionHandler._reconnectCallback = function (d) {
			document.location.reload();
		}
	</script>



	<script>

        //example
        //window.displayTickerAlert1 = (symbol, price) => {
        //    alert(`${symbol}: $${price}!`);
        //};


        //reset 3 slider positions (RGB) to 0
        window.JS_resetsliderposition_Red = () => {
            document.getElementById('slider_Red').value = 0;
            document.getElementById('text_Red').value = 0;
        };
        window.JS_resetsliderposition_Green = () => {
            window.getElementById('slider_Green').value = 0;
            window.getElementById('text_Green').value = 0;

        };
        window.JS_resetsliderposition_Blue = () => {
            document.getElementById('slider_Blue').value = 0;
            document.getElementById('text_Blue').value = 0;
        };


        //update 3 slider positions (RGB) if user adds new input to text field or slider
        window.JS_changesliderposition_Red = (n) => {
            document.getElementById("slider_Red").value = n;
            document.getElementById('text_Red').value = n
        };
        window.JS_changesliderposition_Green = (n) => {
            document.getElementById('slider_Green').value = n;
            document.getElementById("text_Green").value = n;

        };
        window.JS_changesliderposition_Blue = (n) => {
            document.getElementById('slider_Blue').value = n;
            document.getElementById("text_Blue").value = n;
        };


	</script>
</head>
<body>
